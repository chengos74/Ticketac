<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 mt-5">
      <div class="card">
        <div class="signin text-center">
          <h2>Sign-In</h2>
        </div>
        <form action="/sign-in" method="post">
          <div class="mb-3 card-body">
           <!-- <label for="exampleFormControlInput1" name="" class="form-label">Email</label>-->
            <input type="email" name="" class="form-control" id="exampleFormControlInput1" placeholder="Email">
          </div>
          <div class="mb-3 card-body">
           <!-- <label for="exampleFormControlInput1" name="" class="form-label">Password</label>-->
            <input type="email" name="" class="form-control" id="exampleFormControlInput1" placeholder="Password">
          </div>
          <div class="chercher text-center mb-4">
            <button type="submit" class="btn btn-danger">Chercher</button>
          </div>
        </form>
      </div>
    </div>
    <div class="col-12 col-md-6 mt-5">
      <div class="card">
        <div class="signin text-center">
          <h2>Sign-Up</h2>
        </div>
        <form action="/sign-up" method="post">
          <div class="mb-3 card-body">
            <!--<label for="exampleFormControlInput1" name="" class="form-label">Name</label>-->
            <input type="text" name="" class="form-control" id="exampleFormControlInput1" placeholder="Name" required>
          </div>
          <div class="mb-3 card-body">
            <!--<label for="exampleFormControlInput1" name="" class="form-label">FirstName</label>-->
            <input type="text" name="" class="form-control" id="exampleFormControlInput1" placeholder="FirstName" required>
          </div>
          <div class="mb-3 card-body">
            <!--<label for="exampleFormControlInput1" name="" class="form-label">Email</label>-->
            <input type="email" name="" class="form-control" id="exampleFormControlInput1" placeholder="email" required>
          </div>
          <div class="mb-3 card-body">
            <!--<label for="exampleFormControlInput1" name="" class="form-label">Password</label>-->
            <input type="password" name="" class="form-control" id="exampleFormControlInput1" placeholder="Password" required>
          </div>
          <div class="chercher text-center mb-4">
            <button type="submit" class="btn btn-danger">Chercher</button>
          </div>
        </form>
      </div>
    </div>
