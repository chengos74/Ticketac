  <body>
<!--navbar--> 
<%- include('navbar'); %>

<!--Recherche-->
<div class="container">
    <div class="row">
      <div class="texte">
        <h3>One-way ticket :</h3>
      </div>
        <form action="/go" method="post" class="text-center">
            <input type="text" name="departure" placeholder="From: Paris, Marseille...">
            <input type="text" name="arrival" placeholder="To: Lille, Nantes...">

            <label for="start"></label>
            <input type="date" id="start" name="date"
                  value="2022-06-30"
                  min="2018-08-20" max="2018-08-24">
            <button type="submit" class="btn btn-danger p-3">Go</button>
        </form>
        <div class="fond text-center mt-5">
          <img src="/images/landmark.png" height="355px" alt="landmark">
        </div>
    </div>
</div>


<!--footer-->
<div class="container">
  <div class="row text-center mt-5">
    <div class="footer">
      <p>&copy; 2022 La Capsule</p>
    </div>
  </div>
</div>
